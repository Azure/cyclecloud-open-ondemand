---
v2:
  metadata:
    title: "Login {{ item }}"
    managed_by: "cyclecloud"
    hidden: true
  job:
    adapter: "systemd"
    submit_host: "{{ item }}"
    ssh_hosts:
      - {{ item }}

    #site_timeout: 7200
    strict_host_checking: false
    debug: true

  # Don't show ssh link in batch connect card
  batch_connect:
    ssh_allow: false
    basic:
      script_wrapper: |
        module purge
        %s